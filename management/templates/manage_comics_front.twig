{% extends 'base.twig' %}

{% block content %}
<form method="get" action="managecomics_template.php">
    <input type="hidden" name="comic" value="{{comic.id}}" />
    {% if actions|length>1 %}

    <p id="mode">
        <p>Select action:</p>
        {% for action, text in actions %}
        <input type="radio" name="mode" value="{{action}}" id="{{action}}"/>
        <label for="{{action}}">{{text}}</label>
        <br/>
        {% endfor %}
    </p>
    {% else %}
    <input type="hidden" name="mode" value="id"/>
    {% endif %}
    <p id="sites">
        {% if sites|length>1 %}
        <p>Select site:</p>
        {% for site in sites %}
        <input type="radio" name="site" value="{{site}}" id="{{site}}"/>
        <label for="{{site}}">{{site}}</label>
        <br/>
        {% endfor %}
        {% else %}
        <label for="custom_site">Enter site slug:</label>
        <input type="text" name="site" id="custom_site" value="{{sites[0]}}"/>
        {% endif %}
    </p>

    <p id="date">
        <p>Enter date: <br/>
            <label for="month">Month: </label><br/>
            <input type="text" name="month" id="month"/><br/>
            <label for="year">Year: </label><br/>
            <input type="text" name="year" id="year"/></p>
    </p>

    <p id="source">
        <p>Source: <br/>
            {% for id, source in sources %}
            <input type="radio" name="source" value="{{id}}" id="source_{{id}}"/>
            <label for="source_{{id}}">{{source}}</label><br/>
            {% endfor %}
        <input type="submit" value="Submit"/>
    </p>

</form>
{% endblock %}